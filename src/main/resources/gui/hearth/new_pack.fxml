<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextField fx:id="textPackName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PackName:" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
        <Text fx:id="detailLable" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Invalid Pack Name!" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
        <Button fx:id="buttonCreate" mnemonicParsing="false" text="Create" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Pack" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    </children>
</GridPane>
