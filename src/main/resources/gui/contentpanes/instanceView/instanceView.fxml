<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="Instance">
                            <items>
                                <MenuItem fx:id="menuOpenFolder" mnemonicParsing="false" text="Open Instance Folder"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="menuDelete" mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Mods">
                            <items>
                                <MenuItem fx:id="menuDownload" mnemonicParsing="false" text="Download mods from Curse"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Backup">
                            <items>
                                <MenuItem fx:id="menuBackup" mnemonicParsing="false" text="Backup Now"/>
                                <MenuItem fx:id="menuViewBackups" mnemonicParsing="false" text="View Backups / Restore"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>
            <left>
                <VBox prefHeight="375.0" prefWidth="150.0" BorderPane.alignment="CENTER">
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Text fx:id="textPackName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="ModPack Name" GridPane.halignment="CENTER">
                                    <font>
                                        <Font size="19.0"/>
                                    </font>
                                </Text>
                                <Text fx:id="textMinecraftVersion" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Minecraft: 0.0.0" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                        <ImageView fx:id="packIcon" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"/>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="buttonPlay" mnemonicParsing="false" text="Play" GridPane.halignment="CENTER"/>
                                <Button fx:id="buttonOpenFolder" mnemonicParsing="false" text="Open Folder" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                                <Button fx:id="buttonEditVersion" mnemonicParsing="false" text="Change Version" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </left>
            <center>
                <ListView fx:id="modList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
