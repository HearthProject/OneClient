<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.hearthproject.oneclient.util.logging">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="${sys:logFilename}">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <TextAreaAppender name="JavaFXLogger">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %c{1}:%L - %m%n"/>
        </TextAreaAppender>
    </Appenders>
    <Loggers>
        <Root>
        </Root>
        <Logger name="OneClientLogging" level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="JavaFXLogger"/>
        </Logger>
    </Loggers>
</Configuration>